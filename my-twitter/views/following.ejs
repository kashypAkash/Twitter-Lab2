<!DOCTYPE html>
<html lang="en">
<head>
    <title>Test</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <script src="/angularjs/controller.js"></script>
    <link rel="stylesheet" href="stylesheets/style3.css" />
</head>

<body ng-app="myApp" ng-controller="profilectrl">
<!-----------------------------------following page---------------------------------->
<nav class="navbar navbar-default" style="background-color: white">
    <div class="container-fluid">

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class=""><a href="/profile"><img class="img-responsive twitter-home-nav" src="images/twitter-home.png"/><span class="sr-only">(current)</span></a></li>
            </ul>
            
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">search</button>
            </form>
            
               
            <ul class="nav navbar-nav my-logo" >
                <li>
                    <a href="#"><img class="img-responsive twitter-home-nav" src="images/twitter-logo.jpg"/><span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img class="img-responsive twitter-home-nav" src="images/twitter-egg.png"/></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="/editprofile">About</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" ng-click="logout()">Logout</a></li>
                    </ul>
                </li>
            </ul>
            
          <!--  <ul class="nav navbar-right navbar-nav">
             <li>
              <form class="navbar-form navbar-right" ng-submit="logout()" method="post">
                <input type="submit" value="Logout" class="btn btn-success"/>
              </form>
             </li>
            </ul> -->
        </div>
    </div>
</nav>

<div class="container-fluid main-container">
    <div class="row top-part-container">
        <div class="row container-fluid top-part">

        </div>

        <div class="pro-pic">
            <img src="images/default_profile.png" class="img-responsive .img-rounded mypro-pic">
        </div>

        <div class="row container-fluid top-below-part">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <div class="twPc-divStats">
                    <ul class="twPc-Arrange">
                        <li class="twPc-ArrangeSizeFit">
                            <a href="/tweets" title="No of Tweets {{tweetcountval}}">
                                <span class="twPc-StatLabel twPc-block">Tweets</span>
                                <span class="twPc-StatValue" ng-init="tweetcount();">{{tweetcountval}}</span>
                            </a>
                        </li>
                        <li class="twPc-ArrangeSizeFit">
                            <a href="/following" title="Following {{following_count}} ppl">
                                <span class="twPc-StatLabel twPc-block">Following</span>
                                <span class="twPc-StatValue" ng-init="followingcount()">{{following_count}}</span>
                            </a>
                        </li>
                        <li class="twPc-ArrangeSizeFit">
                            <a href="/followers" title="{{followers}} Followers">
                                <span class="twPc-StatLabel twPc-block">Followers</span>
                                <span class="twPc-StatValue" ng-init="followercount()">{{followers}}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

    </div>

    <div class="container-fluid mycols-container"  style="background-color:#F5F5F5">
        <div class="row col-container" style="background-color:#F5F5F5">
            <div class="col-md-3" style="background-color:#ffffff" id="mycol1" >
                <p><h5><strong>{{firstname}}</strong></h5></p>
                <p><h4><strong>{{lastname}}</strong></h4></p>
            </div>


            <div class="col-md-8" style="background-color:#F5F5F5" id="mycol4" >

                <div class="row">

                    <div class="container-fluid followerlist-temp" ng-init="myfollowinguserslist()">
                        <ul class="list-unstyled list-inline">
                            <li ng-repeat="following in myfollowing_list">
                                <div class="twPc-div container">
                                    <a class="twPc-bg twPc-block"></a>
                                    <div>
                                      <!--  <div class="twPc-button">

                                        </div> -->

                                        <a href="#" class="twPc-avatarLink">
                                            <img src="images/profile_pic.jpg" class="twPc-avatarImg">
                                        </a>

                                        <div class="twPc-divUser">
                                            <div class="twPc-divName">

                                                <a href="#" class="twPc-firstname-temp">@{{following.useremail.substring(0,following.useremail.indexOf("@"))}}</a>

                                            </div>
                                            <div class="twPc-lastname">
                                        		<span >
                                      				<a href="#"><span>{{following.firstname}}</span></a>
                                    			</span>
                                    			<span >
                                      				<a href="#"><span>{{following.lastname}}</span></a>
                                    			</span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>



                </div>


            </div>

        </div>

    </div>
</div>


</div>

</body>
</html>