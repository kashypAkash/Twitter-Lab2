<!DOCTYPE html>
<html lang="en">
<head>
  <title>Test</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
  <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
  <link rel="stylesheet" href="./stylesheets/style.css">
  <link rel="stylesheet" href="./stylesheets/style1.css">
  <script src="/angularjs/controller.js"></script>

</head>
<body ng-app="myApp" ng-controller="profilectrl" >
<nav class="navbar navbar-default" style="background-color: white">

    <div class="container-fluid">

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class=""><a href="/profile"><img class="img-responsive twitter-home-nav" src="images/twitter-home.png"/><span class="sr-only">(current)</span></a></li>
            </ul>

            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">search</button>
            </form>


            <ul class="nav navbar-nav my-logo" >
                <li>
                    <a href="#"><img class="img-responsive twitter-home-nav" src="images/twitter-logo.jpg"/><span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img class="img-responsive twitter-home-nav" src="images/twitter-egg.png"/></a>
                    <ul class="dropdown-menu">
                        <li><a href="/hashtags">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="/editprofile">About</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" ng-click="logout()">Logout</a></li>
                    </ul>
                </li>
            </ul>

          <!--  <ul class="nav navbar-right navbar-nav">
             <li>
              <form class="navbar-form navbar-right" ng-submit="logout()" method="post">
                <input type="submit" value="Logout" class="btn btn-success"/>
              </form>
             </li>
            </ul> -->
        </div>
    </div>
</nav>

<!--main container of page-->
<div class="container-fluid main-container">


    <div class="container-fluid" >

          <div class="row no-gutter" style="background-color:#F5F5F5">
            <!--user profile card-->
              <div class="col-md-3 left-strip" >

                <div class="container-fluid">
                    <div class="row">

                        <div class="twPc-div">
                            <a class="twPc-bg twPc-block"></a>
                          <div>
                                  <div class="twPc-button">
                                          <!-- Twitter Button -->
                                  </div>

                                  <a href="#" class="twPc-avatarLink">
                                    <img src="images/profile_pic.jpg" class="twPc-avatarImg">
                                  </a>

                                  <div class="twPc-divUser">
                                    <div class="twPc-divName">
                                      <a href="#" class="twPc-firstname">{{firstname}}</a>
                                    </div>
                                    <div class="twPc-lastname">
                                    <span >
                                      <a href="#"><span>{{lastname}}</span></a>
                                    </span>
                                    </div>
                                  </div>

                                  <div class="twPc-divStats">
                                    <ul class="twPc-Arrange">
                                      <li class="twPc-ArrangeSizeFit">
                                        <a href="/tweets" title="No of Tweets {{tweetcountval}}">
                                          <span class="twPc-StatLabel twPc-block">Tweets</span>
                                          <span class="twPc-StatValue" ng-init="tweetcount()">{{tweetcountval}}</span>
                                        </a>
                                      </li>
                                      <li class="twPc-ArrangeSizeFit">
                                        <a href="/following" title="Following {{following_count}} ppl">
                                          <span class="twPc-StatLabel twPc-block">Following</span>
                                          <span class="twPc-StatValue" ng-init="followingcount()">{{following_count}}</span>
                                        </a>
                                      </li>
                                      <li class="twPc-ArrangeSizeFit">
                                        <a href="/followers" title="{{followers}} Followers">
                                          <span class="twPc-StatLabel twPc-block">Followers</span>
                                          <span class="twPc-StatValue" ng-init="followercount()">{{followers}}</span>
                                        </a>
                                      </li>
                                    </ul>
                                  </div>
                          </div>
                        </div>

                    </div>
                </div>

              </div>
            <!--tweet box-->
              <div class="col-md-5 center-strip" >

                  <div class="container-fluid tweet-container" ng-submit="tweetmessage()">
                    <div class="container-fluid tweet-box">

                      <form role="form"  >
                                  <div class="form-group">
                                    <input type="text" class="form-control" name="tweetmsg" ng-model="tweetmsg" placeholder="Start tweeting here">
                                  </div>

                                  <div class="form-group">
                                    <input type="submit" class="btn btn-primary home-btn" value="Tweet" >
                                  </div>
                      </form>
                    </div>
                  </div>

                <div class="container-fluid tweet-list-temp" style="background-color:#F5F5F5" ng-init="tweetlist()">
                    <ul class="list-unstyled">
                        <li ng-repeat="x in tweet_list">
                            <div class="row no-gutter panel panel-default">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="temp-img-link">
                                            <img src="images/list-temp.png" class="img-responsive template-img">
                                        </a>
                                    </li>
                                    <li>
                                        <p>
                                        <strong><h5><a>@{{user.substring(0,user.indexOf("@"))}} 
                                        			
                                        			</a></h5></strong>
                                        </p>
                                        		<ul class="list-unstyled list-inline list-cond" ng-show="{{x.isretweet}}">
                                     				<li class="list-item-top">
                                         				<a href="#" class="temp-img-link1">retweeted</a>                                         
                                     				</li>
                                     				<li class="list-item-bottom">
                                         					<strong><h5><a>@{{x.tweetof.substring(0,x.tweetof.indexOf("@"))}}</a></h5></strong>                                         				
                                     				</li>
                                				</ul>								
                                    </li>
                                </ul>                                                            
                                <p>
                                <h4> <small>{{x.message}}</small></h4>
                                </p>

                            </div>
                        </li>
                    </ul>
                </div>

                  <div class="container-fluid retweet-list-temp" style="background-color:#F5F5F5" ng-init="retweets()">
                    <ul class="list-unstyled">
                     
                      <li ng-repeat="y in retweetlist"> 
                      <ul class="list-unstyled" >                     
 						<li ng-repeat="item in y.tweet">
                        <div class="row no-gutter panel panel-default">
							  <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="temp-img-link">
                                            <img src="images/list-temp.png" class="img-responsive template-img">
                                        </a>
                                    </li>
                                    <li>
                                        <p>
                                        <strong><h5><a>@{{y.useremail.substring(0,y.useremail.indexOf("@"))}}</a></h5></strong>
                                        </p>
                                    </li>
                                </ul>
                              <p>
                                <h4> <small>{{item.message}}</small></h4>
                              </p>
                              <button type="button" class="btn btn-primary btn-xs pull-left myretweet" name="button" ng-click="willretweet(item.message,y.useremail);">retweet</button>
                        </div>
                      </li>
                      </ul>
					</li>
                    </ul>
                  </div>
              </div>

              <div class="col-md-3 right-strip">
                <div class="container-fluid follow-list-temp" style="background-color:#F5F5F5" ng-init="followlist()">
					<ul class="list-unstyled">
                        <li ng-repeat="x in follow_list">
                            <div class="row panel panel-default">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="temp-img-link">
                                            <img src="images/list-temp.png" class="img-responsive template-img">
                                        </a>
                                    </li>
                                    <li>
                                        <p>
                                        <strong><h5><a>@{{x.useremail.substring(0,x.useremail.indexOf("@"))}}</a></h5></strong>
                                        </p>
                                    </li>
                                </ul>

                                <div class="container-fluid panel-body">
                                    <button type="button" class="btn btn-primary btn-block" ng-click="followuser(x.useremail);">follow</button>
                                </div>
                            </div>
                        </li>
                    </ul>
                 </div>
              </div>
        </div>
    </div>
</div>

</body>
</html>
