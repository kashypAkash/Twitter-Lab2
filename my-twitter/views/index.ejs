<!DOCTYPE html>
<html lang="en">
<head>
  <title>Test</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
  <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
  <link rel="stylesheet" href="./stylesheets/style.css">
  <script src="/angularjs/controller.js"></script>
</head>
<body ng-app="myApp">
<nav class="nav nav-default">
  <div class="container-fluid" align="center" style="background-color: #3b88c3">

    <div class="pull-right">

      <div class="dropdown">
        <a href="#" class="dropdown-toggle login" data-toggle="dropdown">Log In <span class="caret"></span></a>
        <div class="dropdown-menu">
          <div class="container-fluid" ng-controller="controllerLogin" >
            <div>
              <p>Have an account </p>
            </div>
            <div >
            <div>
            <!--<span>Hi {{name}} </span>-->
            </div>
              <form role="form" ng-submit="userLogin()" >
                <div class="form-group">
                  <input type="email" class="form-control" id="email" name="email" ng-model="email" placeholder="Email Id" required="required">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" id="pwd" name="password" ng-model="password" placeholder="Password" required="required">
                </div>
                <div class="form-group">
                  <input type="submit" class="btn btn-default home-btn" value="Log In" >
                </div> 
                
                <p class="login-msg">{{invalidlogin}}</p>              
              </form>
            </div>
          </div>
        </div>
      </div>


    </div>
    <span class="Icon Icon--bird Icon--large"></span>

  </div>


</nav>

<div class="container-fluid">
  <div class="row"  ng-controller="formCtrl">
    <div class="col-md-4"></div>
    <div class="col-md-4 signup" >
      <p><h2>Join Twitter today.</h2></p>
      <form role="form" ng-submit="addUser()" >
        <div class="form-group">
          <input class="form-control" type="text" name="firstname" ng-model="firstname" placeholder="First Name" required="required">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="lastname" ng-model="lastname" placeholder="Last Name" required="required">
        </div>
        <div class="form-group">
          <input class="form-control" type="email" name="useremail" ng-model="useremail" placeholder="Email Id" required="required">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="password" ng-model="password" placeholder="Password" required="required">
        </div>

        <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-default home-btn">          
        </div>
        
        <p class="signup-msg">{{signmsg}}</p>
      </form>
    </div>
    <!--<div class="col-md-4"></div> -->
    <div class="col-md-4"></div>
  </div>

</div>

</body>
</html>
